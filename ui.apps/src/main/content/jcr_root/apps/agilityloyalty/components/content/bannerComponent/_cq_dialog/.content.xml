<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Banner Component"
	sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
		sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
		<items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/coral/foundation/container">
				<items jcr:primaryType="nt:unstructured">
                    <heading
                        jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Heading Text"
                        name="./heading"
                        required="{Boolean}true"/>
                    <Banner
                        jcr:primaryType="nt:unstructured"
						sling:resourceType="/apps/agility-loyalty/components/content/multifield"
						fieldDescription="Click 'Add field' to add a new Banner Items"
						fieldLabel="Banner Items">
                        <field
                            jcr:primaryType="nt:unstructured"
							sling:resourceType="granite/ui/components/coral/foundation/container"
							name="./bannerItems">
							<items jcr:primaryType="nt:unstructured">
                                <column
                                    jcr:primaryType="nt:unstructured"
									sling:resourceType="granite/ui/components/foundation/container">
									<items jcr:primaryType="nt:unstructured">
                                        <image
                                            jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldDescription="Configure Image"
                                            fieldLabel="Banner Image"
                                            name="./image"
                                            required="{Boolean}true"
                                            rootPath="/content/dam/Wyndham"/>
                                        <imageMobile
                                            jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldDescription="Configure Image"
                                            fieldLabel="Banner Image Mobile"
                                            name="./imageMobile"
                                            required="{Boolean}true"
                                            rootPath="/content/dam/Wyndham"/>
                                        <alt
                                            jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Alt Text"
                                            name="./alt"/>
                                        <btnLabel
                                            jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Button Label"
                                            name="./label"/>
                                        <linkTo
                                            jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldLabel="Link"
                                            name="./linkUrl"
                                            rootPath="/content"/>
									</items>
								</column>
							</items>
						</field>
					</Banner>
				</items>
			</column>
		</items>
	</content>
</jcr:root>
